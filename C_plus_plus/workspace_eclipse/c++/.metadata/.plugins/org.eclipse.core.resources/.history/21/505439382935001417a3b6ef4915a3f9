#include <iostream>
using namespace std;

double cel_kel (double temp);	//convert Celsius to Kelvin
double fah_kel (double temp);	//convert Fahrenheit to Kelvin

int main() {
	double temp = 0;
	cout << "enter temp in Celsius = ";
	cin >> temp;
	temp = cel_kel(temp);
	cout << temp << "in Kel";

	cout << "enter temp in Fahrenheit = ";
	cin >> temp;
	temp = fah_kel(temp);
	cout << temp << "in Kel";

	return 0;
}

double cel_kel (double temp_cel) {	//convert Celsius to Kelvin
	double temp_kel = 0.0;
	temp_kel = temp_cel + 274.15;
	return temp_kel;
}

double fah_kel (double temp_fah) {	//convert Fahrenheit to Kelvin
	double temp_kel = 0.0;
	temp_kel = (temp_fah-273.0) * 9.0/5.0 - 32.0;
	return temp_kel;
}

